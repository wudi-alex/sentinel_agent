# Example configuration file for SentinelAgent
# Copy this file to .env and modify the configuration as needed

# Flask application configuration
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5002

# SentinelAgent configuration
SENTINEL_DATA_DIR=/app/data
SENTINEL_LOG_LEVEL=INFO
SENTINEL_LOG_FILE=/app/logs/sentinel_agent.log

# Database configuration (future feature)
# DATABASE_URL=postgresql://sentinel:sentinel_pass@postgres:5432/sentinel_agent
# REDIS_URL=redis://redis:6379/0

# Security configuration
SECRET_KEY=your-secret-key-here-change-in-production
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Monitoring configuration
HEALTH_CHECK_INTERVAL=30
MAX_UPLOAD_SIZE=100MB
MAX_SCAN_DEPTH=10

# Docker specific configuration
DOCKER_CONTAINER=true
CONTAINER_TIMEZONE=Asia/Shanghai

